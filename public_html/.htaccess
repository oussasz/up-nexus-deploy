RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# API routes - handled by Node.js via Passenger
PassengerAppRoot "/home/bnyqzpdb/upnexus"
PassengerNodejs "/home/bnyqzpdb/nodevenv/upnexus/16/bin/node"
PassengerAppType node
PassengerStartupFile api/index.js
PassengerEnabled off

<Location /api>
    PassengerEnabled on
</Location>

# Don't rewrite existing files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Don't rewrite static assets
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|svg|webp|ico|json|woff|woff2|ttf|eot|html)$ [NC]
RewriteRule ^ - [L]

# Auth routes - serve HTML files from pages/auth/
RewriteRule ^auth/login$ /pages/auth/login.html [L]
RewriteRule ^auth/register$ /pages/auth/register.html [L]
RewriteRule ^auth/forgot$ /pages/auth/forgot.html [L]

# Admin routes - serve HTML files from pages/admin/
RewriteRule ^admin/dashboard$ /pages/admin/dashboard.html [L]
RewriteRule ^admin/login$ /pages/admin/login.html [L]
RewriteRule ^admin/?$ /pages/admin/dashboard.html [L]

# Dashboard route
RewriteRule ^dashboard/?$ /pages/dashboard/index.html [L]

# Root-level pages
RewriteRule ^about$ /pages/about.html [L]
RewriteRule ^ecosystem$ /pages/ecosystem.html [L]
RewriteRule ^contact$ /pages/contact.html [L]
RewriteRule ^pricing$ /pages/pricing.html [L]
RewriteRule ^announcements$ /pages/announcements.html [L]

# Custom 404 Error Page
ErrorDocument 404 /404.html

# Set default index file
DirectoryIndex index.html

# Prevent directory listing
Options -Indexes

# Enable GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Set caching headers
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>
